<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main">

    <fragment
        android:id="@+id/main"
        android:name="com.inlay.concertswatcher.presentation.mainList.MainListFragment"
        android:label="Home">

        <action
            android:id="@+id/action_main_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_main_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favourites"
        android:name="com.inlay.concertswatcher.presentation.favouriteList.FavouriteListFragment"
        android:label="Favourite">

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.inlay.concertswatcher.presentation.search.SearchFragment"
        android:label="Search" />
    <fragment
        android:id="@+id/login"
        android:name="com.inlay.login.presentation.LoginFragment"
        android:label="Login" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.inlay.details.presentation.DetailsFragment"
        android:label="DetailsFragment" />
</navigation>